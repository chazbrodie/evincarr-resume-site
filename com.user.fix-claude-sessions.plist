<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.fix-claude-sessions</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>-c</string>
        <string>mkdir -p "$HOME/.claude/usage-data/session-meta" "$HOME/.claude/usage-data/facets" "$HOME/.claude/projects"; LEVELDB="$HOME/Library/Application Support/Claude/Local Storage/leveldb"; [ -d "$LEVELDB" ] &amp;&amp; rm -rf "$LEVELDB"</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/fix-claude-sessions.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/fix-claude-sessions.log</string>
</dict>
</plist>
